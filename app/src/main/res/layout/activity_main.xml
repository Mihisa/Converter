<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context="com.mihisa.miconverter.MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">


        <TextView
            android:id="@+id/previousText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_gap"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:textColor="#6e6e6e"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_gap"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textColor="#1d1d1d"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/default_gap"
            android:textAlignment="textEnd"
            android:textColor="#1d1d1d"
            android:textSize="32sp" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_column="0"
        android:layout_row="18"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout">

        <Button
            android:id="@+id/clear"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttonshape"
            android:fontFamily="sans-serif"
            android:onClick="onClickClear"
            android:text="AC"
            android:textAllCaps="false"
            android:textColor="#f17a0a"
            android:textSize="30sp"
            />

        <ImageButton
            android:id="@+id/backspace"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttonshape"
            android:src="@mipmap/ic_keyboard_backspace_grey600_48dp"
            android:onClick="onClickBack"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/divide"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttonshape"
            android:fontFamily="sans-serif"
            android:onClick="onClickDivide"
            android:text="/"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/multiply"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttonshape"
            android:fontFamily="sans-serif"
            android:onClick="onClickMultiply"
            android:text="X"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/seven"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttonshape"
            android:fontFamily="sans-serif"
            android:onClick="onClickSeven"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/eight"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttonshape"
            android:fontFamily="sans-serif"
            android:onClick="onClickEight"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/nine"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttonshape"
            android:fontFamily="sans-serif"
            android:onClick="onClickNine"
            android:text="9"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/minus"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@mipmap/ic_minus_black_48dp"
            android:background="@drawable/buttonshape"
            android:fontFamily="sans-serif"
            android:onClick="onClickMinus"
            android:text="-"
             />

        <Button
            android:id="@+id/four"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttonshape"
            android:fontFamily="sans-serif"
            android:onClick="onClickFour"
            android:text="4"
            android:textSize="30sp" />

        <Button
            android:id="@+id/five"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttonshape"
            android:fontFamily="sans-serif"
            android:onClick="onClickFive"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/six"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttonshape"
            android:fontFamily="sans-serif"
            android:onClick="onClickSix"
            android:text="6"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/plus"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttonshape"
            android:src="@mipmap/ic_plus_black_48dp"
            android:fontFamily="sans-serif"
            android:onClick="onClickPlus"
             />

        <Button
            android:id="@+id/one"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttonshape"
            android:fontFamily="sans-serif"
            android:onClick="onClickOne"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/two"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttonshape"
            android:fontFamily="sans-serif"
            android:onClick="onClickTwo"
            android:text="2"
            android:textSize="30sp" />

        <Button
            android:id="@+id/three"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttonshape"
            android:fontFamily="sans-serif"
            android:onClick="onClickThree"
            android:text="3"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/result"
            android:layout_columnWeight="1"
            android:layout_rowSpan="2"
            android:layout_rowWeight="1"
            android:background="@drawable/button_orange"
            android:src="@mipmap/ic_equal_white_48dp"
            android:fontFamily="sans-serif"
            android:onClick="onClickResult"
            android:text="="
            android:textColor="#ffffff"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            />

        <Button
            android:id="@+id/percent"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttonshape"
            android:fontFamily="sans-serif"
            android:onClick="onClickPercent"
            android:text="000"
            android:textSize="30sp" />

        <Button
            android:id="@+id/zero"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttonshape"
            android:fontFamily="sans-serif"
            android:onClick="onClickZero"
            android:text="0"
            android:textSize="30sp" />

        <Button
            android:id="@+id/dot"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttonshape"
            android:fontFamily="sans-serif"
            android:onClick="onClickDot"
            android:text="."
            android:textSize="40sp" />
    </GridLayout>

</RelativeLayout>
